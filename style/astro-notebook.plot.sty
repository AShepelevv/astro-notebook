\RequirePackage{pgfplots}
\pgfplotsset{compat = 1.3}
\usepgfplotslibrary{patchplots}
%\RequirePackage{patchplots}
\pgfplotsset{
    width	=	14	cm,
    x label style={
        font = {\small\sffamily},
        yshift = 1mm
    },
    tick label style={
        font = {\scriptsize},
    },
    y label style={
        font = {\small\sffamily},
        yshift = -1mm,
        at={(ticklabel cs:0.5)},
%      					rotate=90,
        anchor=near ticklabel
    },
    every tick/.style	=	{
        black,
        line width 	= 	.5	pt
    },
    axis line style 	= 	{
        line width 	= 	.5	pt
    },
    grid style	=	{
        gray,
        dotted
    },
    minor x tick num = 1,
    minor y tick num = 1,
    no markers,
    grid = major,
    every axis/.append style	=	{
        line width	=	.7	pt
    }
}
